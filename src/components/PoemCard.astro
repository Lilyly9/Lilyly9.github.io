---
import WidgetLayout from "./widget/WidgetLayout.astro";
---

<WidgetLayout name="今日诗词" id="poem-widget">
    <div id="card-poem_card-widget" class="poem-content">
        <div id="poem_sentence" class="poem-sentence">正在加载诗词...</div>
        <div class="poem-info">
            <span id="poem_dynasty" class="poem-dynasty"></span>
            <span id="poem_author" class="poem-author"></span>
        </div>
    </div>
</WidgetLayout>

<script is:inline>
    // 优化：增加错误边界和空值保护，避免数据异常导致脚本报错
    (function() {
        // 先获取DOM元素，避免重复查询
        const sentenceEl = document.getElementById("poem_sentence");
        const dynastyEl = document.getElementById("poem_dynasty");
        const authorEl = document.getElementById("poem_author");

        // 加载今日诗词SDK
        const script = document.createElement('script');
        script.src = 'https://sdk.jinrishici.com/v2/browser/jinrishici.js';

        script.onload = function() {
            window.jinrishici?.load(function(result) {
                // 空值保护：确保result和data存在
                if (!result || !result.data) {
                    sentenceEl.textContent = "暂无诗词推荐";
                    return;
                }

                // 渲染诗词内容
                if (sentenceEl && result.data.content) {
                    let sentenceText = result.data.content.trim();
                    // 移除末尾多余标点（如句号），兼容不同返回格式
                    if (sentenceText.endsWith('。')) {
                        sentenceText = sentenceText.slice(0, -1);
                    }
                    sentenceEl.textContent = sentenceText;
                }

                // 渲染朝代
                if (dynastyEl && result.data.origin?.dynasty) {
                    dynastyEl.textContent = result.data.origin.dynasty;
                }

                // 渲染作者和标题
                if (authorEl && result.data.origin?.author && result.data.origin?.title) {
                    authorEl.textContent = `${result.data.origin.author}《${result.data.origin.title}》`;
                }
            });
        };

        // 加载失败处理
        script.onerror = function() {
            if (sentenceEl) {
                sentenceEl.textContent = "诗词加载失败，请刷新页面";
            }
        };

        document.head.appendChild(script);
    })();
</script>

<style>
    .poem-content {
        padding: 0.5rem 0;
    }

    .poem-sentence {
        font-size: 1rem;
        line-height: 1.6;
        text-align: center;
        margin-bottom: 0.5rem;
        font-family: "SimSun", "STSong", serif; /* 优化：指定中文字体，更适配诗词风格 */
        color: rgb(30 41 59); /* slate-800 */
    }

    .poem-info {
        text-align: center;
        font-size: 0.85rem;
        color: rgb(71 85 105); /* slate-600 */
    }

    /* 深色模式 */
    @media (prefers-color-scheme: dark) {
        .poem-sentence {
            color: lightgrey; /* 你修改后的浅色，替代原slate-200 */
        }

        .poem-info {
            color: lightgray; /* 注意：lightgray是正确写法，lightgrey是英式拼写，两者都兼容 */
        }
    }

    .poem-dynasty {
        margin-right: 0.5rem;
    }

    .poem-author {
        font-style: italic;
    }
</style>