---
import WidgetLayout from "./widget/WidgetLayout.astro";
---

<WidgetLayout name="今日诗词" id="poem-widget">
    <div id="card-poem_card-widget" class="poem-content">
        <div id="poem_sentence" class="poem-sentence">正在加载诗词...</div>
        <div class="poem-info">
            <span id="poem_dynasty" class="poem-dynasty"></span>
            <span id="poem_author" class="poem-author"></span>
        </div>
    </div>
</WidgetLayout>

<script is:inline>
    // 保持原有的诗词脚本不变
    (function() {
        const script = document.createElement('script');
        script.src = 'https://sdk.jinrishici.com/v2/browser/jinrishici.js';
        script.onload = function() {
            window.jinrishici.load(function(result) {
                const sentence = document.getElementById("poem_sentence");
                const author = document.getElementById("poem_author");
                const dynasty = document.getElementById("poem_dynasty");

                if (sentence && result && result.data && result.data.content) {
                    let sentenceText = result.data.content;
                    sentenceText = sentenceText.substring(0, sentenceText.length - 1);
                    sentence.textContent = sentenceText;
                }

                if (dynasty && result && result.data && result.data.origin && result.data.origin.dynasty) {
                    dynasty.textContent = result.data.origin.dynasty;
                }

                if (author && result && result.data && result.data.origin && result.data.origin.author) {
                    author.textContent = result.data.origin.author + '《' + result.data.origin.title + '》';
                }
            });
        };

        script.onerror = function() {
            const sentence = document.getElementById("poem_sentence");
            if (sentence) {
                sentence.textContent = "诗词加载失败，请刷新页面";
            }
        };

        document.head.appendChild(script);
    })();
</script>

<style>
    .poem-content {
        padding: 0.5rem 0;
    }

    .poem-sentence {
        font-size: 1rem;
        line-height: 1.6;
        text-align: center;
        margin-bottom: 0.5rem;
        font-family: serif;
        color: rgb(30 41 59); /* slate-800 */
    }

    .poem-info {
        text-align: center;
        font-size: 0.85rem;
        color: rgb(71 85 105); /* slate-600 */
    }

    /* 深色模式 */
    @media (prefers-color-scheme: dark) {
        .poem-sentence {
            color: rgb(226 232 240); /* slate-200 */
        }

        .poem-info {
            color: rgb(148 163 184); /* slate-400 */
        }
    }

    .poem-dynasty {
        margin-right: 0.5rem;
    }

    .poem-author {
        font-style: italic;
    }
</style>